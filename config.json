{
    "name": "qx-osparc-theme",

    "include": [{
        "path": "${QOOXDOO_PATH}/tool/data/config/application.json"
    }],

    "let": {
        "APPLICATION": "qx-osparc-theme",
        "QOOXDOO_PATH": "/home/node/.npm-global/lib/node_modules/qxcompiler/node_modules/qooxdoo-sdk/framework",
        "QXTHEME": "qx-osparc-theme.theme.Osparc",
        "API_EXCLUDE": ["qx.test.*", "${APPLICATION}.theme.*", "${APPLICATION}.test.*", "${APPLICATION}.simulation.*"],
        "LOCALES": ["en", "de", "fr", "it"],
        "CACHE": "./cache",
        "ROOT": ".",
        "RESPATH": "./source/resource"
    },

    "jobs": {
        "make-font-map": {
            "extend": ["common"],
            "desc": "Build a font mapping from glyphname to unicode id",

            "font-map": {
                "fonts": {
                    "${RESPATH}/${APPLICATION}/fontawesome-webfont.ttf": {
                        "prefix": ["${RESPATH}/${APPLICATION}"],
                        "alias": "FontAwesome",
                        "size": 32
                    }
                }
            }
        }
    }
}
